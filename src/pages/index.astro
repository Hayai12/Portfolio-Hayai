---
import '../styles/global.css';

import Contact from '@/partials/Contact';
import Divider from '@/partials/Divider';
import EducationSection from '@/partials/EducationSection';
import { Hero } from '@/partials/Hero';
import { ProjectList } from '@/partials/ProjectList';
import { Technologies } from '@/partials/Tecnologies';
import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';

const { title } = AppConfig;
const { description } = AppConfig;
const jobs = [
  {
    title: 'Front-End Engineer (CodeAcademy)',
    description: 'Completed a front-end development course focusing on React and Redux for state management, along with HTML, CSS, and JavaScript',
    link: 'https://www.codecademy.com/',
  },
  {
    title: 'TOEFL Certification (B2)',
    description: 'Achieved B2 level in English, showcasing strong reading and communication skills.',
    link: 'https://www.etsglobal.org/tf/en',
  },
  {
    title: 'German Language Certification (B1)',
    description: 'Earned B1 certification in German from the Goethe Institut, demonstrating basic conversational skills.',
    link: 'https://www.goethe.de/en/index.html',
  },
];

---

<Base head={{ title, description }}>
  <Hero  />
  <Divider description="Experience" />
  <EducationSection
  title="Current Role"
  description="I work as a Fraud Analyst, identifying and preventing fraud by analyzing suspicious patterns. I collaborate with the data modeling team to develop rules based on my evaluations."
  linkText="Learn More About My Work"
  jobs={jobs}
  companyName='TEUNO'
/>
    <Divider description="Projects" />
  <ProjectList />
  <Divider description="Technologies" />
  <Technologies />
  <Divider description="Contact Me" />
  <Contact/>
</Base>
